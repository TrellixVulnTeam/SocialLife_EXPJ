<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
     android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="300dp"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enviar mensaje a"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="left"
            android:id="@+id/textViewEnviarMensajeA"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextContenidoMensaje"
        android:textSize="13dp"
        android:gravity="left|top"
        android:padding="5dp"
        android:hint="Escriba aquÃ­ su mensaje"
        android:minHeight="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/fondo_editext"/>

    <ImageView
        android:id="@+id/btnEnviarMensajeA"
        style="?android:textAppearanceSmall"
        android:layout_width="30dp"
        android:layout_marginTop="10dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:text="Enviar"
        android:layout_gravity="right"
        android:src="@drawable/ic_menu_send"/>

    </LinearLayout>

</android.support.v7.widget.CardView>