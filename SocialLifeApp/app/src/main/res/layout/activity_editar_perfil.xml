<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.NextRegistroActivity"
    android:gravity="center"
    android:id="@+id/editar_perfil_layout">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageViewFotoUserEditar"
                android:layout_marginTop="5dp"
                android:src="@drawable/logo"
                android:layout_below="@+id/linearLayout4"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageViewBuscarFotoEditar"
                android:src="@drawable/ic_menu_camera"
                android:layout_gravity="bottom"
                android:layout_alignBottom="@+id/imageViewFotoUserEditar"
                android:layout_toEndOf="@+id/imageViewFotoUserEditar" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/imageViewFotoUserEditar"
                android:layout_alignParentStart="true"
                android:layout_marginTop="24dp"
                android:id="@+id/linearLayout9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nombre"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Apellidos"
                    android:textSize="15dp"

                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout5"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Población"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ciudad"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout5"
                android:layout_alignParentEnd="true"
                android:id="@+id/linearLayout6">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:minHeight="35dp"
                    android:background="@drawable/fondo_editext"
                    android:id="@+id/txtPoblacionEditar"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:minHeight="35dp"
                    android:background="@drawable/fondo_editext"
                    android:id="@+id/txtCiudadEditar"
                    android:layout_weight="1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="71dp"
                android:id="@+id/linearLayout7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Biografía"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:minHeight="70dp"
                    android:maxHeight="70dp"
                    android:background="@drawable/fondo_editext"
                    android:id="@+id/editTextBiografiaEditar"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout8"
                android:layout_below="@+id/linearLayout9"
                android:layout_centerHorizontal="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:minHeight="35dp"
                    android:background="@drawable/fondo_editext"
                    android:id="@+id/editTextNombreEditar"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:minHeight="35dp"
                    android:background="@drawable/fondo_editext"
                    android:id="@+id/editTextApellidosEditar"
                    android:layout_weight="1" />
            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnGuardarCambiosPerfil"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:text="Guardar cambios"
        android:textColor="@color/white"
        android:background="@drawable/redondear"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
